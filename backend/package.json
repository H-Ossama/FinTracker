{
  "name": "fintracker-backend",
  "version": "1.0.0",
  "description": "Backend API for FinTracker mobile app",
  "main": "dist/server.js",
  "scripts": {
    "start": "npx prisma db push --accept-data-loss && node dist/server.js",
    "start:railway": "echo 'Starting Railway deployment...' && npx prisma generate && npx prisma db push --accept-data-loss && echo 'Database ready, starting server...' && node dist/server.js",
    "start:dev": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "npx prisma migrate dev",
    "db:push": "npx prisma db push",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "generate": "npx prisma generate",
    "postbuild": "npx prisma generate",
    "deploy": "npx prisma generate && npx prisma db push --accept-data-loss && node dist/server.js",
    "production-start": "bash scripts/production-start.sh",
    "setup:db": "npx prisma generate && npx prisma db push --accept-data-loss"
  },
  "keywords": [
    "fintech",
    "finance",
    "tracker",
    "mobile",
    "backend",
    "api"
  ],
  "author": "FinTracker Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "expo-server-sdk": "^4.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "google-auth-library": "^9.15.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.22.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "seed": "ts-node src/database/seed.ts"
  }
}
